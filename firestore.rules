rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow owners to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow owners to read coach user documents within their organization
    match /users/{userId} {
      allow read: if request.auth != null && 
        request.auth.token.role == "owner" &&
        get(/databases/$(database)/documents/users/$(userId)).data.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId;
    }

    // Allow owners to read/write stadiums they own
    match /stadiums/{stadiumId} {
      allow read, write: if request.auth != null && 
        request.auth.token.role == "owner" && 
        (request.resource.data.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId || resource.data.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId);
    }
    
    // Allow coaches to read their assigned stadium
    match /stadiums/{stadiumId} {
      allow read: if request.auth != null && 
        request.auth.token.role == "coach" &&
        request.auth.uid in resource.data.assignedCoaches;
    }
    
    // Students subcollection access
    match /stadiums/{stadiumId}/students/{studentId} {
      allow read, write: if request.auth != null && (
        (request.auth.token.role == "owner" && get(/databases/$(database)/documents/stadiums/$(stadiumId)).data.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId) ||
        (request.auth.token.role == "coach" && request.auth.uid == get(/databases/$(database)/documents/stadiums/$(stadiumId)).data.assignedCoachId)
      );
    }
    
     // Attendance subcollection access
    match /stadiums/{stadiumId}/attendance/{attendanceId} {
      allow read, write: if request.auth != null && (
        (request.auth.token.role == "owner" && get(/databases/$(database)/documents/stadiums/$(stadiumId)).data.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId) ||
        (request.auth.token.role == "coach" && request.auth.uid == resource.data.markedByCoachId)
      );
    }

    // Organization data access
     match /organizations/{orgId} {
      allow read, write: if request.auth != null && request.auth.token.role == "owner" && request.auth.uid == resource.data.ownerId;
    }
  }
}