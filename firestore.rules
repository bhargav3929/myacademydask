
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS
    // Owners can read all user profiles in their org
    // Coaches can read their own user profile
    match /users/{userId} {
      allow read: if request.auth != null && 
        (
          (request.auth.token.role == "owner" && request.auth.token.organizationId == resource.data.organizationId) ||
          (request.auth.uid == userId)
        );
      allow write: if request.auth != null && request.auth.uid == userId; // Users can update their own profile
    }

    // STADIUMS
    // Owners can read/write stadiums in their org
    match /stadiums/{stadiumId} {
      allow read, create, update, delete: if request.auth != null && 
        request.auth.token.role == "owner" && 
        (request.resource.data.organizationId == request.auth.token.organizationId || resource.data.organizationId == request.auth.token.organizationId);
    }
    
    // Coaches can read stadiums they are assigned to
    match /stadiums/{stadiumId} {
      allow read: if request.auth != null && 
        request.auth.token.role == "coach" && 
        resource.data.assignedCoachId == request.auth.uid;
    }
    
    // STUDENTS subcollection
    // Owners can CRUD students in their org's stadiums
    // Coaches can CRUD students in their assigned stadium
    match /stadiums/{stadiumId}/students/{studentId} {
      allow read, write: if request.auth != null && (
        (request.auth.token.role == "owner" && get(/databases/$(database)/documents/stadiums/$(stadiumId)).data.organizationId == request.auth.token.organizationId) ||
        (request.auth.token.role == "coach" && stadiumId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedStadiums)
      );
    }

    // ATTENDANCE subcollection
    // Owners can read all attendance in their org
    // Coaches can CRUD attendance in their assigned stadium
    match /stadiums/{stadiumId}/attendance/{attendanceId} {
       allow read: if request.auth != null &&
        (request.auth.token.role == "owner" && get(/databases/$(database)/documents/stadiums/$(stadiumId)).data.organizationId == request.auth.token.organizationId);
       
       allow write: if request.auth != null &&
        (request.auth.token.role == "coach" && stadiumId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedStadiums);
    }

    // ORGANIZATIONS
    // Only owners can read/write their own organization document
    match /organizations/{orgId} {
        allow read, write: if request.auth != null &&
            request.auth.token.role == "owner" &&
            request.auth.token.organizationId == orgId;
    }
  }
}
