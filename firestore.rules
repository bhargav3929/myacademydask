rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow owners to read/write stadiums they own
    match /stadiums/{stadiumId} {
      allow read, write: if request.auth != null && 
        request.auth.token.role == "owner" && 
        resource.data.organizationId == request.auth.token.organizationId;
    }
    
    // Allow coaches to read their assigned stadium
    match /stadiums/{stadiumId} {
      allow read: if request.auth != null && 
        request.auth.token.role == "coach" && 
        resource.data.assignedCoachId == request.auth.uid;
    }
    
    // Students collection access
    match /students/{studentId} {
      allow read, write: if request.auth != null && (
        (request.auth.token.role == "owner" && request.auth.token.organizationId == resource.data.organizationId) ||
        (request.auth.token.role == "coach" && request.auth.uid == resource.data.coachId)
      );
    }

     // User profile access
    match /users/{userId} {
      // Owners can read all user profiles in their org, coaches can read their own
      allow read: if request.auth != null &&
        (
          (request.auth.token.role == 'owner' && get(/databases/$(database)/documents/users/$(userId)).data.organizationId == request.auth.token.organizationId) ||
          (request.auth.uid == userId)
        );

      // Only owners can create new users (as part of stadium creation)
      // Users can update their own profile
      allow write: if request.auth != null &&
        (
          (request.auth.token.role == 'owner') || // Owners can create
          (request.auth.uid == userId) // Users can update their own
        );
    }
  }
}
