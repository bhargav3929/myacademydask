rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only create their own user profile, and must set their role to 'owner'
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.role == 'owner';
      allow update: if request.auth.uid == userId;
    }

    // Organizations can be created if the user is making themselves the owner.
    match /organizations/{orgId} {
      allow create: if request.auth.uid == request.resource.data.ownerId;
      // Allow reads/writes if the user is the owner of the organization.
      allow read, write: if get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid;
    }
    
    // Allow actions on related documents (stadiums, students, attendance) if the user is the owner of the organization.
    match /{collection}/{docId} {
      allow read, write: if get(/databases/$(database)/documents/organizations/$(request.resource.data.organizationId)).data.ownerId == request.auth.uid;
    }
  }
}
